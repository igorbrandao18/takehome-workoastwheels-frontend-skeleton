// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Vehicle {
  id                String         @id @default(uuid())
  make              String
  model             String
  plate             String         @unique
  year              Int
  status            String         // AVAILABLE, RESERVED, MAINTENANCE
  classification    String         // LUXURY, ULTRA_LUXURY, ELECTRIC_PERFORMANCE, SPORTS, LUXURY_SUV, PERFORMANCE_SUV, CLASSIC, MODERN_CLASSIC, EXOTIC, VINTAGE
  pricePerHour      Float
  passengerCapacity Int
  specs             String?
  features          String?
  images            VehicleImage[]
  reservations      Reservation[]
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
}

model VehicleImage {
  id        String   @id @default(uuid())
  url       String
  type      String   // exterior, interior, detail
  order     Int
  vehicle   Vehicle  @relation(fields: [vehicleId], references: [id])
  vehicleId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Reservation {
  id        String   @id @default(uuid())
  startDate DateTime
  endDate   DateTime
  status    String   // ACTIVE, COMPLETED, CANCELLED
  vehicle   Vehicle  @relation(fields: [vehicleId], references: [id])
  vehicleId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
} 